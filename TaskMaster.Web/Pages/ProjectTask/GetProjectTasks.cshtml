        <div class="text-center text-primary bg-white my-1 fw-bold">Progress</div>
        <hr />
        @foreach (var item in Model.Tasks)
        {
            <div class="card col mt-1">
                @if (item.TaskStatus == Core.Enums.ProjectTaskStatus.Progress.ToString())
                {

                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Description</h6>

                        @if (item.PriorityLevel == Core.Enums.PriorityLevel.High.ToString())
                        {
                            <span class="badge badge-pill badge-danger">@item.PriorityLevel</span>
                        }
                        else if (item.PriorityLevel == Core.Enums.PriorityLevel.Low.ToString())
                        {
                            <span class="badge badge-pill badge-primary">@item.PriorityLevel</span>
                        }
                        else
                        {
                            <span class="badge badge-pill badge-warning">@item.PriorityLevel</span>
                        }
                        <hr />
                        <form method="post" asp-page-handler="Update">
                            <input type="hidden" name="taskStatus" value="ToDo" />
                            <button type="submit" class="btn btn-warning btn-sm" asp-route-taskId="@item.Id" asp-page-handler="Update">
                                <i class="fa-solid fa-arrow-left"></i>
                            </button>
                        </form>
                        <form method="post" asp-page-handler="Update">
                            <input type="hidden" name="taskStatus" value="Review" />
                            <button type="submit" class="btn btn-danger btn-sm" asp-route-taskId="@item.Id" asp-page-handler="Update">
                                <i class="fa-solid fa-arrow-right"></i>
                            </button>
                        </form>

                    </div>
                }
            </div>
        }
    </div>
    <div class="col">
        <div class="text-center text-danger bg-white mt-1 fw-bold">Review</div>
        <hr />
        @foreach (var item in Model.Tasks)
        {

            <div class="card col">
                @if (item.TaskStatus == Core.Enums.ProjectTaskStatus.Review.ToString())
                {

                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Description</h6>

                        @if (item.PriorityLevel == Core.Enums.PriorityLevel.High.ToString())
                        {
                            <span class="badge badge-pill badge-danger">@item.PriorityLevel</span>
                        }
                        else if (item.PriorityLevel == Core.Enums.PriorityLevel.Low.ToString())
                        {
                            <span class="badge badge-pill badge-primary">@item.PriorityLevel</span>
                        }
                        else
                        {
                            <span class="badge badge-pill badge-warning">@item.PriorityLevel</span>
                        }
                        <hr />
                        <form method="post" asp-page-handler="Update">
                            <input type="hidden" name="taskStatus" value="Progress" />
                            <button type="submit" class="btn btn-primary btn-sm" asp-route-taskId="@item.Id" asp-page-handler="Update">
                                <i class="fa-solid fa-arrow-left"></i>
                            </button>
                        </form>
                        <form method="post" asp-page-handler="Update">
                            <input type="hidden" name="taskStatus" value="Done" />
                            <button type="submit" class="btn btn-success btn-sm" asp-route-taskId="@item.Id" asp-page-handler="Update">
                                <i class="fa-solid fa-arrow-right"></i>
