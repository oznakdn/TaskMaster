@page "project-tasks"
@model TaskMaster.Web.Pages.ProjectTask.GetProjectTasksModel


<style>
    .filterable {
        margin-top: 15px;
    }

        .filterable .panel-heading .pull-right {
            margin-top: -20px;
        }

        .filterable .filters input[disabled] {
            background-color: transparent;
            border: none;
            cursor: auto;
            box-shadow: none;
            padding: 0;
            height: auto;
        }

            .filterable .filters input[disabled]::-webkit-input-placeholder {
                color: #333;
            }

            .filterable .filters input[disabled]::-moz-placeholder {
                color: #333;
            }

            .filterable .filters input[disabled]:-ms-input-placeholder {
                color: #333;
            }

    textarea {
        resize: none;
    }
</style>


<div class="row">
    <div class="panel panel-primary filterable">
        <div class="panel-heading">
            <h3 class="panel-title text-center display-6">@Model.ProjectName's Tasks</h3>
            <div class="pull-right my-3 text-start">
                <button class="btn btn-secondary btn-sm btn-filter"><span class="glyphicon glyphicon-filter"></span><i class="fa-solid fa-filter"></i></button>
                <button id="createButton" class="btn btn-secondary btn-sm text-end mx-2"><span class="glyphicon glyphicon-filter"></span><i class="fa-solid fa-square-plus"></i></button>

            </div>
        </div>
        <table class="table table-bordered text-black">
            <thead>
                <tr class="filters bg-secondary">
                    <th><input type="text" class="form-control" placeholder="Title" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Priority" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Starting" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Duration" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Ending" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Status" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Explation" disabled></th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Tasks)
                {
                    if (item.IsActive)
                    {
                        <tr class="bg-primary">
                            <td>@item.Title</td>
                            @if (item.PriorityLevel == "High")
                            {
                                <td class="bg-danger">@item.PriorityLevel</td>
                            }
                            else if (item.PriorityLevel == "Medium")
                            {
                                <td class="bg-danger">@item.PriorityLevel</td>
                            }
                            else
                            {
                                <td class="bg-success">@item.PriorityLevel</td>
                            }
                            <td>@item.StartingDate!.Value.ToShortDateString()</td>
                            <td>@item.Duration day</td>
                            <td>@item.EndingDate!.Value.ToShortDateString()</td>
                            <td>@item.TaskStatus</td>
                            <td>@item.StatusExplation</td>
                            <td>
                                <a asp-page="/ProjectTask/UpdateTask" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square text-black"></i></a>
                                <a asp-page="/ProjectTask/DeleteTask" asp-route-id="@item.Id"><i class="fa-solid fa-trash text-black mx-1"></i></a>
                                <a asp-page="/ProjectTask/GetTaskDetails" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info text-black text-center"></i></a>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr class="bg-danger">
                            <td>@item.Title</td>
                            @if (item.PriorityLevel == "High")
                            {
                                <td class="bg-danger">@item.PriorityLevel</td>
                            }
                            else if (item.PriorityLevel == "Medium")
                            {
                                <td class="bg-danger">@item.PriorityLevel</td>
                            }
                            else
                            {
                                <td class="bg-success">@item.PriorityLevel</td>
                            }
                            <td>@item.StartingDate!.Value.ToShortTimeString()</td>
                            <td>@item.Duration day</td>
                            <td>@item.EndingDate!.Value.ToShortTimeString()</td>
                            <td>@item.TaskStatus</td>
                            <td>@item.StatusExplation</td>
                            <td>
                                <a asp-page="/ProjectTask/UpdateTask" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square text-black"></i></a>
                                <a asp-page="/ProjectTask/DeleteTask" asp-route-id="@item.Id"><i class="fa-solid fa-trash text-black mx-1"></i></a>
                                <a asp-page="/ProjectTask/GetTaskDetails" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info text-black"></i></a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>

<!--Create-->
<div class="row" style="display:none" id="createRow">
    <div class="col-12">
        <form method="post">
            <input type="hidden" asp-for="CreateTask.ProjectId" />
            <div class="col-8 offset-2 d-inline-flex">
                <div class="col-8 form-group">
                    <span> Title</span>
                    <input asp-for="CreateTask.Title" type="text" class="form-control">
                </div>
            </div>
            <div class="col-8 offset-2 d-inline-flex mt-1">
                <div class="col-4 form-group">
                    <span> Description</span>
                    <textarea class="form-control" asp-for="CreateTask.Description" rows="3"></textarea>
                </div>
            </div>
            <div class="col-8 offset-2 d-inline-flex mt-1">
                <div class="col-4 form-group mx-1">
                    <span> Status</span>
                    <select asp-for="CreateTask.TaskStatus" asp-items="Html.GetEnumSelectList<TaskMaster.Shared.Dtos.TaskDtos.TaskStatusDto>()" class="form-control form-select">
                        <option value="">Choose..</option>
                    </select>
                </div>
                <div class="col-4 form-group mx-1">
                    <span> Priority</span>
                    <select asp-for="CreateTask.PriorityLevel" asp-items="Html.GetEnumSelectList<TaskMaster.Shared.Dtos.TaskDtos.PriorityLevelDto>()" class="form-control form-select">
                        <option value="">Choose..</option>
                    </select>
                </div>
            </div>
            <div class="col-8 offset-2 d-inline-flex mt-1">
                <div class="col-4 form-group">
                    <span> Starting</span>
                    <input type="date" class="form-control" asp-for="CreateTask.StartingDate">
                </div>
                <div class="col-4 form-group mx-1">
                    <span> Duration</span>
                    <input type="text" class="form-control" asp-for="CreateTask.Duration">
                </div>
            </div>
            <div class="col-8 offset-2 d-inline-flex mt-1">
                <div class="col-4 form-group">
                    <span> Finished</span>
                    <input type="date" class="form-control" asp-for="CreateTask.FinishedDate">
                </div>
            </div>
            <div class="col-8 offset-2 d-inline-flex mt-1">
                <div class="col-8 form-group mx-1">
                    <span> Explation</span>
                    <textarea class="form-control" asp-for="CreateTask.StatusExplation" rows="3"></textarea>
                </div>
            </div>
            <div class="col-8 offset-2 text-center mt-2">
                <div class="col-8 form-group">
                    <button type="submit" class="btn btn-success btn-sm"><i class="fa-solid fa-floppy-disk"></i> Save</button>
                    <button id="cancelButton" type="button" class="btn btn-warning btn-sm mx-3"><i class="fa-solid fa-rectangle-xmark"></i> Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{

    <script>

        // Filter
        $(document).ready(function () {
            $('.filterable .btn-filter').click(function () {
                var $panel = $(this).parents('.filterable'),
                    $filters = $panel.find('.filters input'),
                    $tbody = $panel.find('.table tbody');
                if ($filters.prop('disabled') == true) {
                    $filters.prop('disabled', false);
                    $filters.first().focus();
                } else {
                    $filters.val('').prop('disabled', true);
                    $tbody.find('.no-result').remove();
                    $tbody.find('tr').show();
                }
            });

            $('.filterable .filters input').keyup(function (e) {
                /* Ignore tab key */
                var code = e.keyCode || e.which;
                if (code == '9') return;
                /* Useful DOM data and selectors */
                var $input = $(this),
                    inputContent = $input.val().toLowerCase(),
                    $panel = $input.parents('.filterable'),
                    column = $panel.find('.filters th').index($input.parents('th')),
                    $table = $panel.find('.table'),
                    $rows = $table.find('tbody tr');
                /* Dirtiest filter function ever ;) */
                var $filteredRows = $rows.filter(function () {
                    var value = $(this).find('td').eq(column).text().toLowerCase();
                    return value.indexOf(inputContent) === -1;
                });
                /* Clean previous no-result if exist */
                $table.find('tbody .no-result').remove();
                /* Show all rows, hide filtered ones (never do that outside of a demo ! xD) */
                $rows.show();
                $filteredRows.hide();
                /* Prepend no-result row if all rows are filtered */
                if ($filteredRows.length === $rows.length) {
                    $table.find('tbody').prepend($('<tr class="no-result text-center"><td colspan="' + $table.find('.filters th').length + '">No result found</td></tr>'));
                }
            });
        });

        // Create

        $(document).ready(() => {

            $("#createButton").click(() => {
                $("#createRow").toggle(1000);
            });

            $("#cancelButton").click(() => {
                $("#createRow").toggle(1000);
            });
        });


    </script>
}