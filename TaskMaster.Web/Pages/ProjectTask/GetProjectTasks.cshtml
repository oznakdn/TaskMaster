@page "project-tasks"
@model TaskMaster.Web.Pages.ProjectTask.GetProjectTasksModel

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .filterable {
        margin-top: 15px;
    }

        .filterable .panel-heading .pull-right {
            margin-top: -20px;
        }

        .filterable .filters input[disabled] {
            background-color: transparent;
            border: none;
            cursor: auto;
            box-shadow: none;
            padding: 0;
            height: auto;
        }

            .filterable .filters input[disabled]::-webkit-input-placeholder {
                color: #333;
            }

            .filterable .filters input[disabled]::-moz-placeholder {
                color: #333;
            }

            .filterable .filters input[disabled]:-ms-input-placeholder {
                color: #333;
            }

    textarea {
        resize: none;
    }
</style>


<div class="row justify-content-start">
    <div class="col-3">
        <button id="createButton" class="btn btn-secondary btn-sm text-end mx-2"><span class="glyphicon glyphicon-filter"></span><i class="fa-solid fa-square-plus"></i></button>
    </div>
</div>


<div class="row d-flex mx-1">
    <div class="col">
        <div class="text-center text-warning my-1 fw-bold">ToDo</div>
        <hr />
        
        @foreach (var item in Model.Tasks)
        {
            <div class="card col my-2">
                @if (item.TaskStatus == Core.Enums.ProjectTaskStatus.ToDo.ToString())
                {

                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Description</h6>

                        @if (item.PriorityLevel == Core.Enums.PriorityLevel.High.ToString())
                        {
                            <span class="badge badge-pill badge-danger">@item.PriorityLevel</span>
                        }
                        else if (item.PriorityLevel == Core.Enums.PriorityLevel.Low.ToString())
                        {
                            <span class="badge badge-pill badge-primary">@item.PriorityLevel</span>
                        }
                        else
                        {
                            <span class="badge badge-pill badge-warning">@item.PriorityLevel</span>
                        }

                        <hr />
                        <form method="post" asp-page-handler="Update">
                            <input type="hidden" name="taskStatus" value="Progress" />
                            <button type="submit" class="btn btn-primary btn-sm" asp-route-taskId="@item.Id" asp-page-handler="Update">
                                 <i class="fa-solid fa-arrow-right"></i>
                            </button>
                        </form>

                    </div>
                }
            </div>
        }
    </div>
