@page "/issues"
@model TaskMaster.Web.Pages.ProjectIssue.GetIssuesModel

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" rel="stylesheet" />

<div class="row my-4">
    <div class="text-center display-6 fw-bold">
        Priority Level
    </div>
</div>


<div class="row d-flex mx-1">
    <div class="col">
        <div class="text-center text-bg-secondary text-success my-1 fw-bold">Low</div>
        <hr />

        @foreach (var item in Model.Issues)
        {

            @if (item.PriorityLevel == Core.Enums.PriorityLevel.Low.ToString())
            {
                <div class="card col my-2">
                    <div class="card-body">
                        <h5 class="card-title">@item.Summary</h5>
                        @if (item.ResolutionStatus == "Unresolved")
                        {
                            <p class="badge badge-pill badge-danger"> @item.ResolutionStatus</p>
                        }
                        else
                        {
                            <p class="badge badge-pill badge-success"> @item.ResolutionStatus</p>
                        }
                        <h6 class="card-subtitle mb-2 text-muted">@item.Comment</h6>
                        <hr />
                        <a asp-page="/ProjectIssue/GetProjectIssues" asp-route-id="@item.ProjectId" class="btn btn-light"><i class="fa-solid fa-arrow-right text-black"></i></a>
                    </div>
                </div>
            }

        }
    </div>
    <div class="col">
        <div class="text-center text-bg-secondary text-warning my-1 fw-bold">Medium</div>
        <hr />
        @foreach (var item in Model.Issues)
        {
            @if (item.PriorityLevel == Core.Enums.PriorityLevel.Medium.ToString())
            {
                <div class="card col my-2">
                    <div class="card-body">
                        <h5 class="card-title">@item.Summary</h5>
                        @if (item.ResolutionStatus == "Unresolved")
                        {
                            <p class="badge badge-pill badge-danger"> @item.ResolutionStatus</p>
                        }
                        else
                        {
                            <p class="badge badge-pill badge-success"> @item.ResolutionStatus</p>
                        }
                        <h6 class="card-subtitle mb-2 text-muted">@item.Comment</h6>
                        <hr />
                        <a asp-page="/ProjectIssue/GetProjectIssues" asp-route-id="@item.ProjectId" class="btn btn-light"><i class="fa-solid fa-arrow-right text-black"></i></a>
                    </div>
                </div>
            }

        }
    </div>
    <div class="col">
        <div class="text-center text-bg-secondary text-danger my-1 fw-bold">High</div>
        <hr />
        @foreach (var item in Model.Issues)
        {
            @if (item.PriorityLevel == Core.Enums.PriorityLevel.High.ToString())
            {
                <div class="card col my-2">
                    <div class="card-body">
                        <h5 class="card-title">@item.Summary</h5>
                        @if (item.ResolutionStatus == "Unresolved")
                        {
                            <p class="badge badge-pill badge-danger"> @item.ResolutionStatus</p>
                        }
                        else
                        {
                            <p class="badge badge-pill badge-success"> @item.ResolutionStatus</p>
                        }
                        <h6 class="card-subtitle mb-2 text-muted">@item.Comment</h6>
                        <hr />
                        <a asp-page="/ProjectIssue/GetProjectIssues" asp-route-id="@item.ProjectId" class="btn btn-light"><i class="fa-solid fa-arrow-right text-black"></i></a>
                    </div>
                </div>
            }
        }
    </div>
</div>